<!DOCTYPE html>
<html lang="en">
<head>
  <% include ./parts/head.ejs %>
</head>
<body>
  <% include ./parts/header.ejs %>

  <div class="container">
    <div class="row">
      <div class="col-lg-6 offset-lg-3">
        
        <h5 class="mt-3 hvr-float-shadow"> LogIn </h5>
        <br>
        <br>
        <form action="/user/api/v1/login" method="post">
          
          <div class="form-group input-group">
            <span class="input-group-prepend">
              <i class="input-group-text fas fa-user"></i>
            </span>
            <input type="text" name="email" class="form-control" placeholder="Enter EmailID" autofocus required>
          </div>

          <div class="form-group input-group">
            <span class="input-group-prepend">
              <i class="input-group-text fas fa-lock"></i>
            </span>
            <input type="password" name="password" class="form-control" placeholder="Password" required>
          </div>

          <br>
          <button type="submit" class="btn btn-block btn-success hvr-float-shadow" name="submit"> Login</button>
          <br>
          <br>
          <p> Not Registered Yet? </p>
          <a href="/user/signup"  class="btn btn-secondary btn-block hvr-float-shadow"><b>Sign Up Here</b></a>
        </form>

      </div>
    </div>  
  </div>

  <div class="fixed-bottom">
    <% include ./parts/footer.ejs %>  
  </div>
  
</body>
</html>
